<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404" />

    <TextView
        android:id="@+id/pointsTV"
        android:layout_width="158dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTV" />

    <Button
      android:id="@+id/trophyBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="208dp"
      android:text="Back To Trophy Case"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pointsTV"
      app:layout_constraintVertical_bias="1.0" />

    <Button
      android:id="@+id/buy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Buy"
      app:layout_constraintBottom_toTopOf="@+id/trophyBtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pointsTV"
      app:layout_constraintVertical_bias="0.828" />

    <TextView
        android:id="@+id/descripTV"
        android:layout_width="129dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/pointsTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTV"
        app:layout_constraintVertical_bias="0.29" />

    <ImageButton
      android:id="@+id/imageBtn"
      android:layout_width="132dp"
      android:layout_height="115dp"
      app:layout_constraintBottom_toTopOf="@+id/nameTV"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.688"
      app:srcCompat="@drawable/ic_add_trophy" />

</androidx.constraintlayout.widget.ConstraintLayout>