<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop"
    tools:context=".CreateTrophyFragment">
    <!--android:background="@color/backgroundColor">-->

    <ImageView
        android:id="@+id/border1"
        android:layout_width="135dp"
        android:layout_height="95dp"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/border" />

    <ImageView
        android:id="@+id/border2"
        android:layout_width="132dp"
        android:layout_height="95dp"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/border" />

    <ImageView
        android:id="@+id/border3"
        android:layout_width="132dp"
        android:layout_height="95dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon3"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/border" />

    <EditText
        android:id="@+id/trophy_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:textColor="#FFFFFF"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="15sp"
        android:textStyle="bold"
        android:theme="@style/EditText"
        app:layout_constraintBottom_toTopOf="@+id/trophy_points_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/trophy_points_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="344dp"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:textColor="#FFFFFF"
        android:hint="Points"
        android:inputType="number"
        android:textSize="15sp"
        android:theme="@style/EditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cancel_trophy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#CCC8C8"
        android:fontFamily="@font/beachday"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy_points_txt" />

    <Button
        android:id="@+id/create_trophy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F44F5D"
        android:fontFamily="@font/beachday"
        android:text="Create"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy_points_txt" />

    <TextView
        android:id="@+id/textView_selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/short_stack"
        android:text="Select Trophy Icon"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:theme="@style/TextView"
        app:layout_constraintBottom_toTopOf="@+id/icon1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/icon1"
        android:layout_width="65dp"
        android:layout_height="92dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon3"
        app:srcCompat="@drawable/trophy1" />

    <ImageButton
        android:id="@+id/icon2"
        android:layout_width="65dp"
        android:layout_height="92dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/trophy_name_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/trophy2" />

    <ImageButton
        android:id="@+id/icon3"
        android:layout_width="65dp"
        android:layout_height="92dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/trophy_name_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/trophy3" />



</androidx.constraintlayout.widget.ConstraintLayout>