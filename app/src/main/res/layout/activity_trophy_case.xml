<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kidstodoapp.TrophyCase">

    <ImageButton
        android:id="@+id/trophyButton"
        android:layout_width="114dp"
        android:layout_height="109dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="461dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/AddTrophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="5dp"
        android:text="Add Trophy"
        app:layout_constraintEnd_toEndOf="@+id/trophyButton"
        app:layout_constraintTop_toBottomOf="@+id/trophyButton" />
</androidx.constraintlayout.widget.ConstraintLayout>