    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="411dp"
        android:layout_height="670dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="19dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/trophyButton"
        app:layout_constraintEnd_toStartOf="@+id/trophyButton">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/trophyButton"
        android:layout_width="114dp"
        android:layout_height="109dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="461dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.335"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/AddTrophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="5dp"
        android:text="Add Trophy"
        app:layout_constraintEnd_toEndOf="@+id/trophyButton"
        app:layout_constraintTop_toBottomOf="@+id/trophyButton" />
</androidx.constraintlayout.widget.ConstraintLayout>