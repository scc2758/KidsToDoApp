<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kidstodoapp.TrophyActivity">


    <TextView
        android:id="@+id/trophy_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:paddingRight="60dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trophy_description_textview"
        android:layout_width="119dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/trophy_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/trophy_name_textview" />

    <CheckBox
        android:id="@+id/redemption_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trophy_points_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy_description_textview" />

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="92dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/trophy_name_textview"
        app:layout_constraintTop_toTopOf="@+id/trophy_name_textview"
        app:srcCompat="@drawable/trophy1" />

</androidx.constraintlayout.widget.ConstraintLayout>