<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/cabin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border" />

    <TextView
        android:id="@+id/trophy_name"
        android:layout_width="109dp"
        android:layout_height="23dp"
        android:layout_marginStart="44dp"
        android:fontFamily="@font/beachday"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy_icon" />

    <ImageView
        android:id="@+id/trophy_icon"
        android:layout_width="107dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/trophy_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/trophy1" />

    <TextView
        android:id="@+id/trophy_points"
        android:layout_width="108dp"
        android:layout_height="22dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2" />



</androidx.constraintlayout.widget.ConstraintLayout>