<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <TextView
        android:id="@+id/trophy_name"
        android:layout_width="107dp"
        android:layout_height="31dp"
        android:layout_marginStart="44dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy_icon" />

    <ImageView
        android:id="@+id/trophy_icon"
        android:layout_width="107dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/trophy_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/trophy1" />

    <TextView
        android:id="@+id/trophy_description"
        android:layout_width="211dp"
        android:layout_height="23dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="16dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/trophy_name"
        app:layout_constraintEnd_toEndOf="@+id/trophy_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/trophy_icon" />

    <TextView
        android:id="@+id/trophy_points"
        android:layout_width="205dp"
        android:layout_height="19dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/trophy_icon"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="@+id/trophy_icon"
        app:layout_constraintTop_toTopOf="@+id/trophy_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="141dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toStartOf="@+id/trophy_points"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border" />

</androidx.constraintlayout.widget.ConstraintLayout>