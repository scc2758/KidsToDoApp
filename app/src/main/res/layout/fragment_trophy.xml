<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop"
    tools:context="com.example.kidstodoapp.TrophyFragment">
    <!--    android:background="@color/backgroundColor"-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="139dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border" />

    <TextView
        android:id="@+id/trophy_name_textview"
        android:layout_width="179dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/beachday"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:theme="@style/TextView"
        app:layout_constraintBottom_toTopOf="@+id/trophy_points_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="92dp"
        android:layout_height="85dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773"
        app:srcCompat="@drawable/trophy1" />

    <TextView
        android:id="@+id/trophy_description_textview"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/short_stack"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:theme="@style/TextView"
        app:layout_constraintEnd_toEndOf="@+id/cancel_button"
        app:layout_constraintTop_toTopOf="@+id/cancel_button" />

    <TextView
        android:id="@+id/trophy_points_textview"
        android:layout_width="118dp"
        android:layout_height="25dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/short_stack"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:theme="@style/TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/short_stack"
        android:foregroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Redeem"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:theme="@style/TextView"
        app:drawableTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/trophy_name_textview"
        app:layout_constraintEnd_toEndOf="@+id/icon_view" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="340dp"
        android:backgroundTint="#CCC8C8"
        android:fontFamily="@font/beachday"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="84dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#EC6874"
        android:fontFamily="@font/beachday"
        android:text="Buy"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/trophy_description_textview"
        app:layout_constraintEnd_toStartOf="@+id/cancel_button" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="84dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#EC6874"
        android:fontFamily="@font/beachday"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/trophy_description_textview"
        app:layout_constraintEnd_toStartOf="@+id/cancel_button" />

</androidx.constraintlayout.widget.ConstraintLayout>