<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop"
    tools:context="com.example.kidstodoapp.TrophyFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="139dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="@+id/cancel_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border" />

    <TextView
        android:id="@+id/trophy_points_textview"
        android:layout_width="118dp"
        android:layout_height="25dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/short_stack"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:theme="@style/TextView"
        app:layout_constraintStart_toStartOf="@+id/trophy_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/trophy_name_textview" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/short_stack"
        android:foregroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Redeem"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:theme="@style/TextView"
        app:drawableTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/trophy_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/cancel_button" />

    <TextView
        android:id="@+id/trophy_name_textview"
        android:layout_width="179dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="116dp"
        android:fontFamily="@font/beachday"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:theme="@style/TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="92dp"
        android:layout_height="85dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/trophy1" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="#CCC8C8"
        android:fontFamily="@font/beachday"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/buy_button"
        app:layout_constraintTop_toBottomOf="@+id/icon_view" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="84dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#EC6874"
        android:fontFamily="@font/beachday"
        android:text="Buy"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_view" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="84dp"
        android:layout_height="49dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="#EC6874"
        android:fontFamily="@font/beachday"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buy_button"
        app:layout_constraintTop_toBottomOf="@+id/icon_view" />

</androidx.constraintlayout.widget.ConstraintLayout>